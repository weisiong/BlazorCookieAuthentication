@page "/"
@model BlazorLogin.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form method="post" class="form-signin">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-label-group">
                            <input type="email" asp-for="Input.Email" class="form-control" placeholder="Email address" required autofocus>
                            <label asp-for="Input.Email">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password" required>
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" asp-for="Input.RememberMe" class="custom-control-input">
                            <label asp-for="Input.RememberMe" class="custom-control-label">Remember password</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                        <hr class="my-4">

                        @*<a asp-page="./ForgotPassword">Forget password</a><br>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">New register</a>*@
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>
        </div>
    </div>
<div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
